{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next"
      }
    },
    {
      "src": "backend/api/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["backend/**", "backend/node_modules/.prisma/**"],
        "maxDuration": 30
      }
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "buildCommand": "cd backend && pnpm install && npx prisma generate && pnpm run build",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/frontend/$1",
      "has": [
        {
          "type": "host",
          "value": "markfy.davirezende.dev"
        }
      ]
    },
    {
      "source": "/(.*)",
      "destination": "/backend/api/index.ts",
      "has": [
        {
          "type": "host",
          "value": "markfy-api.davirezende.dev"
        }
      ]
    }
  ]
}
